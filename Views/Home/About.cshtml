@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-lg-12 text-center">
            <h1 class="display-4 mb-4">About Melbon Car Sales</h1>
            <p class="lead text-muted">Your Trusted Partner in Finding the Perfect Vehicle Since 2010</p>
        </div>
    </div>

    <!-- Our Story Section -->
    <div class="row mb-5 align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <img src="https://via.placeholder.com/600x400" alt="Our Showroom" class="img-fluid rounded shadow">
        </div>
        <div class="col-lg-6">
            <h2 class="h3 mb-4">Our Story</h2>
            <p>Founded in 2010, Melbon Car Sales has grown from a small local dealership to one of the most trusted names in the automotive industry. Our journey began with a simple mission: to provide quality vehicles and exceptional service to our community.</p>
            <p>Today, we continue to uphold these values while embracing modern technology and innovative solutions to serve our customers better.</p>
            <div class="row mt-4">
                <div class="col-6">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-check-circle-fill text-primary h4 mb-0 me-2"></i>
                        <span>13+ Years Experience</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-check-circle-fill text-primary h4 mb-0 me-2"></i>
                        <span>5000+ Happy Customers</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Our Values Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="h3">Our Core Values</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-heart-fill text-primary display-4 mb-3"></i>
                    <h3 class="h5 mb-3">Customer First</h3>
                    <p class="text-muted mb-0">We prioritize our customers' needs and satisfaction above everything else.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-shield-check text-primary display-4 mb-3"></i>
                    <h3 class="h5 mb-3">Quality Assurance</h3>
                    <p class="text-muted mb-0">Every vehicle undergoes rigorous quality checks before being offered to customers.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="bi bi-trophy text-primary display-4 mb-3"></i>
                    <h3 class="h5 mb-3">Excellence</h3>
                    <p class="text-muted mb-0">We strive for excellence in every aspect of our business.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="h3">Our Leadership Team</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm">
                <img src="https://via.placeholder.com/400x400" class="card-img-top" alt="Team Member">
                <div class="card-body text-center">
                    <h5 class="card-title mb-1">Lenox Randy</h5>
                    <p class="text-muted small mb-3">Chief Executive Officer</p>
                    <p class="card-text">Over 15 years of experience in automotive industry.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm">
                <img src="https://via.placeholder.com/400x400" class="card-img-top" alt="Team Member">
                <div class="card-body text-center">
                    <h5 class="card-title mb-1">Jane Smith</h5>
                    <p class="text-muted small mb-3">Operations Director</p>
                    <p class="card-text">Expertise in customer service and dealership management.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm">
                <img src="https://via.placeholder.com/400x400" class="card-img-top" alt="Team Member">
                <div class="card-body text-center">
                    <h5 class="card-title mb-1">Mike Johnson</h5>
                    <p class="text-muted small mb-3">Sales Manager</p>
                    <p class="card-text">Dedicated to finding the perfect car for every customer.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="row mb-5 g-4">
        <div class="col-md-3">
            <div class="text-center">
                <h3 class="display-4 fw-bold text-primary mb-2">1000+</h3>
                <p class="text-muted mb-0">Cars Sold Annually</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <h3 class="display-4 fw-bold text-primary mb-2">98%</h3>
                <p class="text-muted mb-0">Customer Satisfaction</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <h3 class="display-4 fw-bold text-primary mb-2">50+</h3>
                <p class="text-muted mb-0">Expert Staff</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center">
                <h3 class="display-4 fw-bold text-primary mb-2">3</h3>
                <p class="text-muted mb-0">Locations</p>
            </div>
        </div>
    </div>

    <!-- CTA Section -->
    <div class="row">
        <div class="col-12">
            <div class="bg-light rounded-3 p-5 text-center">
                <h2 class="h3 mb-4">Ready to Find Your Perfect Car?</h2>
                <p class="mb-4">Visit our showroom or contact us today to explore our extensive collection of quality vehicles.</p>
                <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#contactModal">
                    Contact Us
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Custom Pop-up -->
<div id="contactPopup" class="contact-popup d-none">
    <div class="contact-popup-content">
        <span class="close-btn">&times;</span>
        <h5>Contact Us</h5>
        <ul class="list-unstyled">
            <li class="mb-3">
                <i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                Tom Mboya Street, Nairobi City
            </li>
            <li class="mb-3">
                <i class="bi bi-telephone-fill me-2 text-primary"></i>
                +254 791178996
            </li>
            <li class="mb-3">
                <i class="bi bi-envelope-fill me-2 text-primary"></i>
                info@melboncars.com
            </li>
        </ul>
    </div>
</div>

